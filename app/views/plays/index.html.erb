<p id="notice"><%= notice %></p>

<h1>Listing Plays</h1>

<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plays.each do |play| %>
      <tr>
        <td><%= link_to play.song.title, play.song %></td>
        <td><%= link_to play.artist.name, play.artist %></td>
        <td><%= link_to 'Show', play %></td>
      </tr>
    <% end %>
  </tbody>
</table>

