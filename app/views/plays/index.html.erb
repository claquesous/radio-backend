<p id="notice"><%= notice %></p>

<h1>Listing Plays</h1>

<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Artist</th>
      <th>Stream</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plays.each_with_index do |play, index| %>
      <tr>
        <td><%= link_to play.song.title, play.song %></td>
        <td><%= link_to play.artist.name, play.artist %></td>
        <td><%= link_to play.stream.name, play.stream %></td>
        <td><%= link_to 'Show', play %></td>
        <% if index == 0 %>
          <td>
            <%= form_for(:rating, url: stream_ratings_path(@stream)) do |f| %>
              <div class="actions">
                <%= f.hidden_field :up, value: true %>
                <%= f.hidden_field :play_id, value: play.id %>
                <%= f.submit "Rate Up" %>
              </div>
            <% end %>
          </td>
          <td>
            <%= form_for(:rating, url: stream_ratings_path(@stream)) do |f| %>
              <div class="actions">
                <%= f.hidden_field :up, value: false %>
                <%= f.hidden_field :play_id, value: play.id %>
                <%= f.submit "Rate Down" %>
              </div>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

