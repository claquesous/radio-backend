<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Album</th>
      <th>Artist</th>
      <th>Title</th>
      <th>Sort</th>
      <th>Slug</th>
      <th>Track</th>
      <th>Time</th>
      <th>Featured</th>
      <th>Live</th>
      <th>Remix</th>
      <th>Rating</th>
      <th>Path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.album.title, song.album %></td>
        <td><%= link_to song.artist.name, song.artist %></td>
        <td><%= song.title %></td>
        <td><%= song.sort %></td>
        <td><%= song.slug %></td>
        <td><%= song.track %></td>
        <td><%= song.time %></td>
        <td><%= song.featured %></td>
        <td><%= song.live %></td>
        <td><%= song.remix %></td>
        <td><%= song.rating %></td>
        <td><%= song.path %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

